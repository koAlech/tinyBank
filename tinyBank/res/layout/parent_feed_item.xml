<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_white"
    android:orientation="vertical"
    android:padding="12dp"
    tools:ignore="overdraw">

    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
        <ImageView
	        android:id="@+id/parent_feed_imageview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="centerCrop"
	        tools:ignore="ContentDescription" />
        
        <LinearLayout
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="10dp"
	    	android:paddingRight="10dp"
	    	android:orientation="vertical">
    	
            <TextView
		        android:id="@+id/parent_feed_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:fontFamily="sans-serif-light"
		        android:paddingBottom="0dp"
		        android:textSize="20dp"
		        android:textColor="?android:attr/textColorSecondary"
		        tools:ignore="UnusedAttribute" />
            
            <TextView
		        android:id="@+id/parent_feed_desc"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:fontFamily="sans-serif-light"
		        android:paddingBottom="10dp"
		        android:textSize="14dp"
		        android:textColor="?android:attr/textColorSecondary"
		        tools:ignore="UnusedAttribute" />
            
            <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#30000000" />
            
            <RelativeLayout
		        android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:paddingTop="10dp">
		    	
                <TextView
			        android:id="@+id/parent_feed_date"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:fontFamily="sans-serif-light"
			        android:textSize="14dp"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentBottom="true"
			        android:textColor="?android:attr/textColorSecondary"
			        tools:ignore="UnusedAttribute" />
                
                <ImageView
			        android:id="@+id/parent_feed_action_green"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingTop="10dp"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentBottom="true"
			        android:scaleType="centerCrop"
			        android:visibility="gone"
			        android:src="@drawable/more_actions_green"
			        tools:ignore="ContentDescription" />
                <ImageView
			        android:id="@+id/parent_feed_action_red"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:paddingTop="10dp"
			        android:layout_alignParentBottom="true"
			        android:scaleType="centerCrop"
			        android:visibility="gone"
			        android:src="@drawable/more_actions_red"
			        tools:ignore="ContentDescription" />
                <ImageView
			        android:id="@+id/parent_feed_action_pending"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingTop="10dp"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentBottom="true"
			        android:scaleType="centerCrop"
			        android:visibility="gone"
			        android:src="@drawable/pending"
			        tools:ignore="ContentDescription" />
                
	    	</RelativeLayout>
            
    	</LinearLayout>
        
    </LinearLayout>

</LinearLayout>