<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_margin="0dp" >
    
    <RelativeLayout
        android:id="@+id/feed_header"
        android:layout_width="wrap_content"
        android:layout_height="192dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/container_dropshadow" >

        <ImageView
            android:id="@+id/accountImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="0dp"
            android:scaleType="fitXY" >

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feed_header_balance_layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp" >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="10dp"
                android:src="@drawable/rocket_status" />

            <TextView
                android:id="@+id/feed_header_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:text="2 Active Goals"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feed_header_balance_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:padding="0dp" >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="10dp"
                android:src="@drawable/coin_status" />

            <TextView
                android:id="@+id/feed_header_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.51"
                android:padding="0dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
		
    </RelativeLayout>
    <!-- 
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#20000000" />
     -->
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#30000000" />
    
    <ListView
        android:id="@+id/feed_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/feed_header"
        android:background="#e2e2e2"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="8dp"
        android:fadingEdge="none"
        android:fitsSystemWindows="true"
        android:padding="12dp"
        android:scrollbarStyle="outsideOverlay" />
    
</LinearLayout>